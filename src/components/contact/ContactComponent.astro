---
// Import the necessary dependencies.
import AuthBtn from "@components/contact/AuthBtn.astro";
import TextInput from "@components/contact/TextInput.astro";
import EmailContactInput from "@components/contact/EmailContactInput.astro";
import TextAreaInput from "@components/contact/TextAreaInput.astro";

// Define the variables that will be used in this component
const title: string = "reach out to me";
---

<section
    class="mx-auto w-full lg:px-24 max-w-4xl md:px-12 items-center px-8 py-24"
>
    <div class="mx-auto max-w-1xl lg:max-w-2xl">
        <div class="text-center">
            <h1
                class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200"
            >
                {title}
            </h1>
        </div>

        <div class="mt-12 items-center gap-6 lg:gap-16">
            <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
                <form action="https://submit-form.com/pKqezgA3S">
                    <div class="grid gap-4">
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                            <TextInput
                                id="hs-firstname-contacts"
                                label="First Name"
                                name="hs-firstname-contacts"
                            />
                            <TextInput
                                id="hs-lastname-contacts"
                                label="Last Name"
                                name="hs-lastname-contacts"
                            />
                        </div>

                        <EmailContactInput
                            id="hs-email-contacts"
                            label="Email"
                        />
                        <TextAreaInput
                            id="hs-about-contacts"
                            label="Details"
                            name="hs-about-contacts"
                        />
                    </div>

                    <div class="mt-4 grid">
                        <AuthBtn title="Send Message" />
                    </div>
                    <p class="pt-10">
                        Or email me at <a
                            href="mailto:martinssvikkalns@gmail.com"
                            class="font-bold hover:underline"
                        >
                            martinssvikkalns@gmail.com
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>
